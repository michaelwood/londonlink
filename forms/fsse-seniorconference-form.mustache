<script>
var lmOptions = {
  url: "/webservices/quaker/local-quaker-meetings.json",
  getValue: "lm",
  theme: "square",

  list: {
    onSelectItemEvent: function(){

      var am = jQuery("#local-meeting").getSelectedItemData().am;

      if (am){
        jQuery("#area-meeting").val(am);
      }
    },
    match: { enabled: true } },
};

var amOptions = {
  url: "/webservices/quaker/quaker-area-meetings.json",
  getValue: "am",
  theme: "square",

  list: {
    match: { enabled: true } },
};


jQuery(document).ready(function(){
  jQuery("#local-meeting").easyAutocomplete(lmOptions);
  jQuery("#area-meeting").easyAutocomplete(amOptions);
});

</script>

